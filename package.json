{
  "private": true,
  "name": "rest-api-boilerplate",
  "version": "0.1.0",
  "description": "Typescript sample REST API",
  "main": "dist/src/index.js",
  "_moduleAliases": {
    "@src": "dist/src"
  },
  "scripts": {
    "openapi:generate": "ts-node -r tsconfig-paths/register scripts/openapi-gen.ts",
    "compile:check": "tsc --noEmit",
    "build": "NODE_ENV=production rm -rf dist && tsc --project src/tsconfig.json",
    "test": "NODE_ENV=development jest --coverage",
    "test:unit": "NODE_ENV=development jest test/unit",
    "test:integration": "NODE_ENV=development jest test/integration",
    "test:coverage": "NODE_ENV=development jest --coverage; open-cli coverage/lcov-report/index.html",
    "lint": "eslint '{src,scripts,test}/**/*.{js,ts}'",
    "serve": "NODE_ENV=development ts-node --project src/tsconfig.json -r tsconfig-paths/register src/server.ts",
    "dev": "NODE_ENV=development nodemon -e ts,js,json,toml --signal SIGTERM --exec 'yarn serve'",
    "package:sync": "syncyarnlock -k -s"
  },
  "engines": {
    "node": ">12.0.0"
  },
  "author": "nya1",
  "license": "MIT",
  "dependencies": {
    "class-transformer": "^0.2.3",
    "class-validator": "0.10.1",
    "config": "^3.3.0",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "inversify": "^5.0.1",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.0",
    "routing-controllers-openapi": "^1.8.0",
    "toml": "^3.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/config": "^0.0.36",
    "@types/express": "^4.17.3",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.2",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "class-validator-jsonschema": "^1.3.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "open-cli": "^5.0.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "syncyarnlock": "^1.0.19",
    "ts-jest": "^25.2.1",
    "ts-node": "^8.7.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  }
}
